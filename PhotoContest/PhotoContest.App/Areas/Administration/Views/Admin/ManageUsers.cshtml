@model IEnumerable<PhotoContest.App.Models.ViewModels.User.FullUserViewModel>
@{
    ViewBag.Title = "Manage Users";
}

<h2>ManageUsers</h2>

<div class="row">
    @using (Html.BeginForm("GetUserDetails", "Admin", FormMethod.Post))
    {
        @(Html.Kendo()
    .AutoComplete()
    .Name("searchUsers")
    .Placeholder("Search by username...")
    .MinLength(2)
    .DataTextField("UserName")
    .DataSource(dataSource =>
    {
        dataSource
            .Read(x => x.Action("SearchByUsername", "Admin")
            .Data("onUserSearchData"))
            .ServerFiltering(true);
    }))

        <input type="submit" value="Manage"/>
    }
</div>

<script>
    function onUserSearchData() {
        return {
            text: $("#searchUsers").val()
        }
    }
</script>

