@model PhotoContest.App.Models.ViewModels.Contest.CreateContestViewModel

@{
    ViewBag.Title = "NewContest";
}

@using (Ajax.BeginForm("CreateContest", "Contests", new {},
    new AjaxOptions
    {
        HttpMethod = "POST",
        OnSuccess = "ajaxHelper.onSuccess",
        OnFailure = "ajaxHelper.onError"
    }, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    <fieldset>
        <legend>New Contest</legend>
        <div class="form-group">
            @Html.LabelFor(c => c.Title, new { @class = "col-lg-2 control-label" })
            <div class="col-lg-10">
                @Html.TextBoxFor(c => c.Title, new { @class = "form-control"})
                @Html.ValidationMessageFor(c => c.Title, string.Empty, new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(c => c.Description, new { @class = "col-lg-2 control-label" })
            <div class="col-lg-10">
                @Html.TextAreaFor(c => c.Description, new { @class = "form-control"})
                @Html.ValidationMessageFor(c => c.Description, string.Empty, new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label for="RewardStrategyId" class="col-lg-2 control-label">Reward Strategy</label>
            <div class="col-lg-10">
                <select class="form-control" id="RewardStrategyId" name="RewardStrategyId">
                    @Html.Partial("_StrategyPartial", Model.RewardStrategies);
                </select>
                <div id="RewardStrategyPartial">

                </div>
            </div>
        </div>
        <div class="form-group">
            <label for="VotingStrategyId" class="col-lg-2 control-label">Voting Strategy</label>
            <div class="col-lg-10">
                <select class="form-control" id="VotingStrategyId" name="VotingStrategyId">
                    @Html.Partial("_StrategyPartial", Model.VotingStrategies);
                </select>
            </div>
        </div>
        <div class="form-group">
            <label for="ParticipationStrategyId" class="col-lg-2 control-label">Participation Strategy</label>
            <div class="col-lg-10">
                <select class="form-control" id="ParticipationStrategyId" name="ParticipationStrategyId">
                    @Html.Partial("_StrategyPartial", Model.ParticipationStrategies);
                </select>
            </div>
        </div>
        <div class="form-group">
            <label for="DeadlineStrategyId" class="col-lg-2 control-label">Deadline Strategy</label>
            <div class="col-lg-10">
                <select class="form-control" id="DeadlineStrategyId" name="DeadlineStrategyId">
                    @Html.Partial("_StrategyPartial", Model.DeadlineStrategies);
                </select>
                <div id="DeadlineStrategyPartial">
                    
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
                <input type="submit" class="btn btn-primary" value="Create" />
            </div>
        </div>
    </fieldset>
}
<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

@Scripts.Render("~/bundles/createContest")
